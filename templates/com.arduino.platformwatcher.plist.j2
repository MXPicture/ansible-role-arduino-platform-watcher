<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN"
  "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.arduino.platformwatcher</string>

    <key>ProgramArguments</key>
    <array>
        <string>/bin/bash</string>
        <string>{{ arduino_platform_script_dir }}/arduino-platform-watcher.sh</string>
    </array>

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <true/>

    <key>StandardOutPath</key>
    <string>{{ arduino_platform_script_dir }}/platformwatcher.out</string>
    <key>StandardErrorPath</key>
    <string>{{ arduino_platform_script_dir }}/platformwatcher.err</string>
</dict>
</plist>
